<!DOCTYPE html>
<html>
<head>
  <title>Carlyle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header id="site_header" class="navbar navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="../">The Carlyle</a>
    </div>
    <nav role="navigation" class="">
      <ul class="nav navbar-nav">
        <li class="active"><a href="">Gallery</a></li>
        <li><a href="">Floorplans</a></li>
        <li><a href="">Contact</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Owners', documents_path %></li>
      </ul>
    </nav>
  </div>
</header>

<% if content_for?(:page_banner) %>
<div class="banner">
  <div class="container">
    <%= content_for(:page_banner) %>
  </div>
</div>
<% end %>

<%= yield %>

<footer id="site_footer">
  <div class="container">
    <%= link_to 'Built by Culture Code', 'http://www.culturecode.ca' %>
  </div>
</footer>
</body>
</html>
