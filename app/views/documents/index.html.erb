<% content_for :page_banner do %>
  <h1>Owner Documents</h1>
  <p>All notices, rules, bylaws, meeting minutes, and forms in one spot</p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>Meeting Minutes</h2>
      <%= render 'list', :documents => @minutes %>
    </div>
    <div class="col-md-4">
      <h2>Rules</h2>
      <%= render 'list', :documents => @rules %>
      <h2>Bylaws</h2>
      <%= render 'list', :documents => @bylaws %>
    </div>
    <div class="col-md-4">
      <h2>Notices</h2>
      <%= render 'list', :documents => @notices %>
      <h2>Forms</h2>
      <%= render 'list', :documents => @forms %>
    </div>
  </div>
</div>
