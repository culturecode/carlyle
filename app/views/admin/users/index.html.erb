<% content_for :page_banner do %>
  <h1>Users</h1>
  <p>Account management and access control</p>
<% end %>

<table class="table">
  <tr>
    <th>Email</th>
    <th>Role</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.email, [:admin, user] %></td>
    <td><%= user.role %></td>
  </tr>
<% end %>
</table>
