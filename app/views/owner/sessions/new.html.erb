<% content_for :page_banner do %>
  <h1>Sign in</h1>
  <%= simple_form_for(:user, :url => owner_session_path) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class="col-xs-6">
          <%= f.input :name, required: false, autofocus: true, :label => 'Username' %>
        </div>
        <div class="col-xs-6">
          <%= f.input :password, required: false %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in" %>
    </div>
  <% end %>
<% end %>
